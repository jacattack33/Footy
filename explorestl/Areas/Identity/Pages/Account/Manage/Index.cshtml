@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}
<partial name="_StatusMessage" for="StatusMessage" />


<div id="profilecard" class="card" style="border-radius: 6px;">
    <div class="row">
        <div class="col-md-2">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" id="profileLabel"></div>
                <div class="form-group">
                    <label asp-for="Input.DisplayName" class="form-control" id="profileLabel">Pick your display name</label>
                    <input asp-for="Input.DisplayName" class="form-label" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.Bio" class="form-control" id="profileLabel">Create a bio</label>
                    <textarea asp-for="Input.Bio" class="form-label" id="bioTextArea"></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Emoji" class="form-control" id="profileLabel">Choose your emoji!</label>
                    <select asp-for="Input.Emoji" id="Input.Emoji" name="Input.Emoji">
                        <option value="👽">👽</option>
                        <option value="👻">👻</option>
                        <option value="👾">👾</option>
                        <option value="👿">👿</option>
                        <option value="🐙">🐙</option>
                        <option value="🐶">🐶</option>
                        <option value="☠️">☠️</option>
                        <option value="🖌️">🖌️</option>
                        <option value="🍺">🍺</option>
                        <option value="🌈">🌈</option>
                        <option value="🌷">🌷</option>
                        <option value="🤠">🤠</option>
                        <option value="🙊">🙊</option>
                        <option value="🏀">🏀</option>
                        <option value="🥰">🥰</option>
                        <option value="🧁">🧁</option>
                        <option value="🍒">🍒</option>
                        <option value="☕">☕</option>
                    </select>
                </div>
                <br />
                <button id="update-profile-button" type="submit" class="profileSaveButton">Save</button>
            </form>
        </div>
    </div>
</div>
</br>
</br>
</br>
</br>
</br>
